<% content_for(:title, "เข้าสู่ระบบ") %>
<h3 class="text-center">เข้าสู่ระบบ</h3>
<div class="col-md-6 col-md-offset-3">
	<%= form_for(@session, url: sessions_path, html: {class: 'form-horizontal'}) do |f| %>
		<%= fields_for(@application) do |s| %>
			<div class="form-group">
				<%= s.label :email, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.email_field :email, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :password, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.password_field :password, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<%= f.submit class: "btn btn-primary form-control" %>
			</div>
		<% end %>
	<% end %>
</div>