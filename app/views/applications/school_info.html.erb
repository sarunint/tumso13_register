<% content_for(:title, 'ข้อมูลโรงเรียน') %>
<h3 class="text-center">ข้อมูลโรงเรียน</h3>
<div class="col-md-6 col-md-offset-3">
	<%= render 'layouts/errors', models: [@school] %>
	<%= form_for(@school, url: school_path, html: {class: "form-horizontal"}) do |f| %>
		<div class="form-group">
			<%= f.label :name, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :name, class: "form-control", readonly: true %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :number, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :number, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :soi, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :soi, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :road, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :road, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :subdistrict, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :subdistrict, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :district, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :district, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :province, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :province, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :zip, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :zip, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :telephone, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :telephone, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :fax, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :fax, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :website, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.text_field :website, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.submit class: "btn btn-primary form-control" %>
		</div>
	<% end %>
</div>