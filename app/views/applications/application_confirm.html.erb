<% content_for(:title, 'ยืนยันข้อมูล') %>
<h3 class="text-center">ยืนยันข้อมูล</h3>
<div class="col-md-6 col-md-offset-3">
	<%= form_for(@application, html: {class: "form-horizontal"}) do |f| %>
		<div class="form-group">
			<%= f.label :email, class: "col-md-3 control-label" %>
			<div class="col-md-9">
				<%= f.email_field :email, class: "form-control", readonly: true %>
			</div>
		</div>
		<%= fields_for @application.subject do |s| %>
			<div class="form-group">
				<%= s.label :name, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :name, class: "form-control", readonly: true %>
				</div>
			</div>
		<% end %>
		<%= fields_for @school do |s| %>
			<div class="form-group">
				<%= s.label :name, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :name, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :number, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :number, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :soi, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :soi, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :road, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :road, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :subdistrict, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :subdistrict, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :district, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :district, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :province, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :province, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :zip, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :zip, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :telephone, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :telephone, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :fax, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.text_field :fax, class: "form-control", readonly: true %>
				</div>
			</div>
			<div class="form-group">
				<%= s.label :website, class: "col-md-3 control-label" %>
				<div class="col-md-9">
					<%= s.url_field :website, class: "form-control", readonly: true %>
				</div>
			</div>
		<% end %>
		<div class="form-group">
			<%= f.submit class: "btn btn-primary form-control" %>
		</div>
	<% end %>
</div>