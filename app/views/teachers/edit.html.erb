<% content_for(:title, 'แก้ไขครูผู้ควบคุม') %>
<div class="row text-center">
	<h3>แก้ไขครูผู้ควบคุม</h3>
</div>
<div class="col-md-6 col-md-offset-3">
	<%= form_for(@teacher, url: application_teacher_path, html: {class: 'form-horizontal'}) do |f| %>
		<%= render 'layouts/errors', models: [@teacher] %>
		<div class="form-group">
			<%= f.label :title, class: 'col-md-3 control-label' %>
			<div class="col-md-9">
				<%= f.text_field :title, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :fname, class: 'col-md-3 control-label' %>
			<div class="col-md-9">
				<%= f.text_field :fname, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :lname, class: 'col-md-3 control-label' %>
			<div class="col-md-9">
				<%= f.text_field :lname, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= f.submit class: 'btn btn-primary form-control' %>
		</div>
	<% end %>
</div>